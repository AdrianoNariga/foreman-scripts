cat > /etc/yum.repos.d/<%= @host.operatingsystem.name %>.repo << EOF
[core]
name=Red Hat Enterprise Linux 7 Server
baseurl=<%= @host.params['local_repo'] %>/rhel-7-server-rpms/
enabled=1
gpgcheck=0

[common]
name=Red Hat Enterprise Linux 7 Server - RH Common
baseurl=<%= @host.params['local_repo'] %>/rhel-7-server-rh-common-rpms/
enabled=1
gpgcheck=0
EOF
